<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="account"
            type="tg.sdk.sca.data.consent.TgAccount" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountTitle"
            style="@style/TextMediumBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:consentAccountTitle="@{account}"
            android:textColor="@color/dark_blue"
            app:layout_constraintEnd_toEndOf="@+id/guide_end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_outer_vertical"
            tools:text="Saving - BHD" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountNick"
            app:layout_constraintTop_toBottomOf="@+id/accountTitle"
            app:layout_constraintStart_toStartOf="@+id/accountTitle"
            app:layout_constraintEnd_toEndOf="@+id/accountTitle"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="xxxx0102"
            android:text="@{account.accountId}"
            android:textColor="@color/dark_blue" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_end="60dp"
            android:orientation="vertical"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxAccount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/checkBox"
            android:layout_marginEnd="@dimen/margin_outer_vertical"
            app:layout_constraintTop_toTopOf="@+id/accountTitle"
            app:layout_constraintBottom_toBottomOf="@+id/accountNick"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/separator1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/accountNick"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
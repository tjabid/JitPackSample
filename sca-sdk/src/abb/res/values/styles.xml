<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonSolidTurquoise" parent="TextBodyBold">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_fast_pay</item>
        <item name="android:layout_marginBottom">@dimen/margin_outer_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonTransparent" parent="ButtonSolidTurquoise">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:layout_marginBottom">@dimen/margin_outer_bottom</item>
        <item name="android:textColor">@color/abb_theme_primary</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="hintTextAppearance">@style/TextSmallest</item>
        <item name="shapeAppearance">@android:color/transparent</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textSize">@dimen/text_smallest</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_medium</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TgToolbarStyle">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:background">@color/toolbarBackground</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/dark_grey</item>
        <item name="titleTextAppearance">@style/TextTitleMedium</item>
    </style>

    <style name="checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/abb_theme_primary</item>
    </style>

</resources>
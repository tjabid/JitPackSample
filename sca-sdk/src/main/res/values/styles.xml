<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleProgressView">
        <attr name="cpv_progress_width" format="dimension" />
        <attr name="cpv_progress_bg_color" format="color" />
        <attr name="cpv_progress_main_color" format="color" />
    </declare-styleable>


    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="TextLargeBold" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_bold</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextLarge" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextTitleBold" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_bold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextTitleMedium" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_medium</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextTitle" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="TextMediumBold" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_bold</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextMedium" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextBodyBold" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_bold</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="TextBody" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextSmallBold" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_bold</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextSmall" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextSmallest" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textSize">@dimen/text_smallest</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance">
        <item name="android:fontFamily">@font/sca_medium</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="ButtonSolidTurquoise" parent="TextMedium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_fast_pay</item>
        <item name="android:layout_marginBottom">@dimen/margin_outer_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonTransparent" parent="ButtonSolidTurquoise">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="InputFieldErrorStyle">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:textColor">@color/input_layout_text_color</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/input_layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/input_layout_padding_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@android:color/transparent</item>
        <item name="boxBackgroundMode">none</item>
        <item name="colorControlActivated">@color/inputLayoutFocused</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textSize">@dimen/text_smallest</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/InputFieldErrorStyle</item>
        <!--    hint enable and colors    -->
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="hintTextAppearance">@style/TextSmallest</item>
    </style>

    <style name="TgToolbarStyle">
        <item name="android:background">@color/toolbarBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="DefaultAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/DefaultAlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DefaultAlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DefaultAlertDialogButtonStyle</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/sca_regular</item>
    </style>

    <style name="DefaultAlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/sca_regular</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/turquoise</item>
        <item name="trackTint">@color/turquoise_dark</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textAppearance">@style/TextMedium</item>
        <item name="fontFamily">@font/sca_regular</item>
    </style>

    <!-- alert dialog theme-->
    <style name="NotificationAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/turquoise</item>
        <item name="android:textColorPrimary">@color/dark_blue</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/sca_medium</item>
    </style>
</resources>